{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@mf-demo/UI": ["packages/UI/src/index.ts"],
      "@mf-demo/cart-components": ["packages/cart-components/src/index.ts"],
      "@mf-demo/chat-mcp-lib": ["packages/chat-mcp-lib/src/index.ts"],
      "@mf-demo/store": ["packages/store/src/index.ts"]
    },
    "baseUrl": "."
  }
}
